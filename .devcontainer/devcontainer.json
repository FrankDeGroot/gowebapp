{
    "containerEnv": {
        "SHELL": "/bin/bash"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "golang.go",
                "ms-azuretools.vscode-docker"
            ]
        }
    },
    "dockerComposeFile": [
        "docker-compose.yaml"
    ],
    "service": "golang",
    "forwardPorts": [ 8000 ],
    "postCreateCommand": {
        "delve": "go install -v github.com/go-delve/delve/cmd/dlv@latest",
        "git": "git config --global --add safe.directory /todo-app"
    },
    "updateRemoteUserUID": true,
    "workspaceFolder": "/todo-app"
}